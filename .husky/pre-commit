# Rodar o phpstan
echo "🔍 Rodando o PHPSTAN...";
./vendor/bin/phpstan
if [ $? -ne 0 ]; then
    echo "🌋 ATENÇÃO!";
    echo "O PHPSTAN encontrou algumas inconsistências.".
    echo "Ajuste-as antes de continuar!";
    exit 1;
fi;

# rodar os testes
echo "🧪 Rodando os testes...";
php artisan test --parallel | php
if [ $? -ne 0 ]; then
    echo "🌋 ATENÇÃO!";
    echo "Verifique os testes antes de continuar!";
    exit 1;
fi;

# Formatar cada arquivo alterado usando o Laravel Pint
echo "🧹 Formatando arquivos alterados...";
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep ".php\{0,1\}$") || true

for FILE in $STAGED_FILES
do
    ./vendor/bin/pint "${FILE}" ; #> /dev/null >&1;
    git add "${FILE}";
done;

exit 0;
