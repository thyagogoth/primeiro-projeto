# Rodar o phpstan
echo "ðŸ” Running phpstan...";
./vendor/bin/phpstan
if [ $? -ne 0 ]; then
    echo "ðŸŒ‹ WARNING!";
    echo "The PHPSTAN found some inconsistencies.".
    echo "Please, fix them before continue!";
    exit 1;
fi;

# rodar os testes
echo "ðŸ§ª Running tests...";
php artisan test --parallel | php
if [ $? -ne 0 ]; then
    echo "ðŸŒ‹ WARNING!";
    echo "Please, fix the tests before continue!";
    exit 1;
fi;

# Formatar cada arquivo alterado usando o Laravel Pint
echo "ðŸ§¹ Pinting files...";
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep ".php\{0,1\}$") || true

for FILE in $STAGED_FILES
do
    ./vendor/bin/pint "${FILE}" ; #> /dev/null >&1;
    git add "${FILE}";
done;

exit 0;
